int switchState = 0;
void setup() {
  pinMode(3, OUTPUT); //green light
  pinMode(4, OUTPUT); //red light 2
  pinMode(5, OUTPUT); //red light 1
  pinMode(2, INPUT);  //button

}

void loop() {
  switchState = digitalRead(2);
  if(switchState == LOW){ //button is not pressed
    digitalWrite(3,HIGH);
    digitalWrite(4,LOW);
    digitalWrite(5,LOW);
  }
  else { //button is pressed
    digitalWrite(3,LOW);
    digitalWrite(4,LOW);
    digitalWrite(5,HIGH);

    delay(250); //wait a quarter second
    digitalWrite(4,HIGH);
    digitalWrite(5,LOW);
    delay(250);
  }
}
